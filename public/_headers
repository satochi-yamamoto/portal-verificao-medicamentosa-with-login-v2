# Cache Control para assets estáticos
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache Control para imagens
/images/*
  Cache-Control: public, max-age=2592000

# Cache Control para favicons
/favicon.*
  Cache-Control: public, max-age=2592000

/apple-touch-icon.png
  Cache-Control: public, max-age=2592000

/android-chrome-*.png
  Cache-Control: public, max-age=2592000

# Headers de segurança para todas as páginas
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.supabase.co https://api.openai.com https://www.google-analytics.com; frame-ancestors 'none'

# Headers específicos para index.html
/index.html
  Cache-Control: public, max-age=0, must-revalidate

# Headers para manifest
/site.webmanifest
  Content-Type: application/manifest+json
  Cache-Control: public, max-age=86400

# Headers para sitemap
/sitemap.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=86400

# Headers para robots.txt
/robots.txt
  Content-Type: text/plain
  Cache-Control: public, max-age=86400
